<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/yiliaobg" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dip" >

            <TextView
                android:gravity="left"
                android:text="病人姓名:"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bingrenxinming"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FFFFFF" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dip" >

            <TextView
                android:gravity="left"
                android:text="联系电话:"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lianxidianhua"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FFFFFF" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip" >

            <TextView
                android:gravity="left"
                android:text="挂号费:"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/guahaofei"
                android:gravity="left"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FFFFFF" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip" >

            <TextView
                android:gravity="left"
                android:text="就诊时间:"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/jiuzhengshijian"
                android:gravity="left"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FFFFFF" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip" >

            <TextView
                android:gravity="left"
                android:text="当前状态:"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dangqianzhuangtai"
                android:gravity="left"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FFFFFF" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dip" >

            <Button
                android:id="@+id/zhengduanBtn"
                android:layout_width="120dp"
                android:layout_height="27dp"
                android:background="@drawable/buttonbj"
                android:gravity="center"
                android:text="诊   断"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </TableRow>
    </TableLayout>

</ScrollView>