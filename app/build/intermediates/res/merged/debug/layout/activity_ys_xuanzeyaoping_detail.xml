<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/yiliaobg"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="药品名称:"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/yaopingmingcheng"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>
        
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dip"
            android:background="#FFFFFF" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="库存:"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/kucun"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dip"
            android:background="#FFFFFF" />
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="单价:"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/danjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dip"
            android:background="#FFFFFF" />
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="说明:"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shuoming"
                android:layout_width="200dip"
                android:layout_height="100dip"
                android:background="@color/base_end_color_default"
                android:gravity="left"
                android:singleLine="false"
                android:text=""
                android:textColor="@color/text_color_default"
                android:textSize="18sp" />

        </TableRow>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dip"
            android:background="#FFFFFF" />
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="购买数量:"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/goumaishuliang"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:background="@color/base_end_color_default"
                android:gravity="left"
                android:inputType="number"
                android:textColor="#000000"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/quedingBtn"
        android:layout_width="150dip"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:layout_marginTop="20dip"
        android:background="@drawable/green_btn_out"
        android:gravity="center"
        android:text="确  定"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>